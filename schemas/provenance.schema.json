{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Provenance Schema",
  "description": "Schema for validating data extraction provenance",
  "type": "object",
  "properties": {
    "site": {
      "type": "string",
      "description": "Name of the site"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "URL of the extracted data"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of extraction"
    },
    "passed": {
      "type": "boolean",
      "description": "Whether extraction passed validation"
    },
    "fields": {
      "type": "object",
      "description": "Extracted field data",
      "properties": {
        "title": {
          "type": "string"
        },
        "content": {
          "type": "string"
        }
      }
    },
    "error": {
      "type": "string",
      "description": "Error message if extraction failed"
    }
  },
  "required": ["site", "url", "timestamp", "passed"],
  "additionalProperties": true
}