{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Vehicle Schema",
  "description": "Schema for validating vehicle data",
  "type": "object",
  "properties": {
    "vin": {
      "type": "string",
      "pattern": "^[A-HJ-NPR-Z0-9]{17}$",
      "description": "Vehicle Identification Number"
    },
    "make": {
      "type": "string",
      "minLength": 1,
      "description": "Vehicle manufacturer"
    },
    "model": {
      "type": "string",
      "minLength": 1,
      "description": "Vehicle model"
    },
    "year": {
      "type": "integer",
      "minimum": 1900,
      "maximum": 2030,
      "description": "Model year"
    },
    "price": {
      "type": "number",
      "minimum": 0,
      "description": "Vehicle price in USD"
    },
    "mileage": {
      "type": "integer",
      "minimum": 0,
      "description": "Vehicle mileage"
    },
    "condition": {
      "type": "string",
      "enum": ["new", "used", "certified", "salvage"],
      "description": "Vehicle condition"
    },
    "location": {
      "type": "object",
      "properties": {
        "city": { "type": "string" },
        "state": { "type": "string" },
        "zip": { "type": "string" }
      },
      "required": ["city", "state"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Data extraction timestamp"
    }
  },
  "required": ["make", "model", "year", "price", "timestamp"],
  "additionalProperties": true
}